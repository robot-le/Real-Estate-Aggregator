files:
    /usr/local/bin/run_spiders_script.sh:
        mode: "000755"
        owner: root
        group: root
        content: |
            #!/bin/bash
            source /var/app/venv/*/bin/activate
            source /opt/elasticbeanstalk/deployment/env
            cd /var/app/current
            python manage.py crawl-all

    /etc/cron.d/fetch_emails_cron:
        mode: "000644"
        owner: root
        group: root
        content: |
            0 22 * * * root /usr/local/bin/run_spiders_script.sh

commands:
  rm_old_cron:
    command: "rm -fr /etc/cron.d/*.bak"
    ignoreErrors: true
